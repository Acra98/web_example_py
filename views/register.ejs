<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Tech Innovators</title>
    <link rel="stylesheet" href="public/landing_style.css">
    <link rel="stylesheet" href="public/style.css">

    
</head>
<body>
    <!-- Header Section -->
    <header>
        <a href="javascript:history.back()" class="go-back-button">Go Back</a>
        <h1>Create Your Account</h1>
    </header>

    <!-- Registration Form Section -->
    <section id="register-form" class="section-container">
        <form action="/register" method="POST" id="registerForm">
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>

            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>

            <label for="confirm-password">Confirm Password:</label>
            <input type="password" id="confirm-password" name="confirm-password" required>

            <label for="email">Email:</label>
            <input type="email" id="email" name="email" required>

            <button type="submit" class="register-button" onclick="registerUser(event)">Register</button>
        </form>
    </section>
</body>
<script src="DB_connection.js"></script>
</html>