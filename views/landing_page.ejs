    <!-- Contact Section -->
    <a href="/contact" class="cta-button">
        <section id="contact" class="section-container">
            <h2>Contact Us</h2>
            <p>Have any questions? Feel free to reach out to us. We would love to hear from you!</p>
        </section>
    </a>

