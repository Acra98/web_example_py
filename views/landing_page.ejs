    <!-- Header Section -->
    <header>
        <!-- Navigation Bar -->
        <div class="navbar">
            <div class="logo">
                <h1>Tech Innovators</h1>
            </div>
            <nav>
                <ul>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/about">About</a></li>
                    <li class="dropdown">
                        <a href="#" class="dropbtn">Services</a>
                        <div class="dropdown-content">
