                <a href="#" class="video-link" data-video="dQw4w9WgXcQ">LinkedIn</a>
            </ul>
        </div>
        <!-- Modal structure -->
        <div id="videoModal" class="modal">
          <div class="modal-content">
            <span class="close-btn">&times;</span>
